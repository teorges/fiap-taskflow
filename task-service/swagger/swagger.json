{
  "swagger": "2.0",
  "info": {
    "title": "Task Service API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/tasks": {
      "get": {
        "summary": "Listar todas as tarefas",
        "responses": { "200": { "description": "Sucesso" } }
      },
      "post": {
        "summary": "Criar uma tarefa",
        "parameters": [{
          "name": "task",
          "in": "body",
          "required": true,
          "schema": { "$ref": "#/definitions/Task" }
        }],
        "responses": { "201": { "description": "Criado" } }
      }
    }
  },
  "definitions": {
    "Task": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string" }
      }
    }
  }
}